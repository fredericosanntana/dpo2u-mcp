{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/index.ts",
    "src/httpServer.ts",
    "src/cli.ts",
    "src/core/**/*.ts",
    "src/server/**/*.ts",
    "src/utils/**/*.ts",
    "src/integrations/leann.ts",
    "src/integrations/ollama.ts",
    "src/integrations/openfhe.ts",
    "src/tools/auditInfrastructure.ts",
    "src/tools/fheTools.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
